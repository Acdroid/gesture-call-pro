<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 
	android:id="@+id/lay_main" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<!-- android:background="@drawable/gradiente_android"> -->

	<!-- xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" -->

	<android.gesture.GestureOverlayView
		android:id="@+id/gestures" 
		android:layout_width="fill_parent" android:layout_height="0dip" android:layout_weight="1.0"
		android:gravity="center" 
		android:gestureStrokeType="multiple"
		android:eventsInterceptionEnabled="true" 
		android:gestureColor="#c32020"
		android:uncertainGestureColor="#80c32020"
		android:orientation="vertical">

		<RelativeLayout android:orientation="vertical"
			android:layout_height="fill_parent" android:layout_width="fill_parent">

		    <ac.gestureCallPro.ui.cabecera.Cabecera
	    		android:id="@+id/main_cabecera"
	    		android:layout_height="50dip"
				android:layout_width="fill_parent"
				android:layout_alignParentTop="true"
	    		
	    		></ac.gestureCallPro.ui.cabecera.Cabecera>



			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:layout_alignParentBottom="true">

				<LinearLayout android:layout_height="10dip"
					android:layout_width="fill_parent" android:background="@drawable/gradient_shadow_down">
				</LinearLayout>

				<LinearLayout android:orientation="horizontal"
					android:layout_height="wrap_content" android:layout_width="fill_parent"
					android:layout_alignParentBottom="true" android:padding="5dip"
					android:background="@drawable/gradient_header">

					<Button android:id="@+id/ButtonBar" android:layout_width="0dip"
						android:layout_height="fill_parent" android:layout_weight="1"
						android:onClick="clickAdd" android:text="@string/ini_Button"
						android:padding="10dip" android:background="@drawable/button_menu_bar_left_bg" />

					<Button android:id="@+id/main_button_edit"
						android:layout_width="0dip" android:layout_height="fill_parent"
						android:layout_weight="1" android:onClick="clickEdit"
						android:text="@string/button_edit_gesture" android:padding="10dip"
						android:background="@drawable/button_menu_bar_right_bg" />


				</LinearLayout>

				<!-- <com.google.ads.AdView android:id="@+id/Publicidad" android:layout_width="fill_parent" 
					android:layout_height="wrap_content" ads:adUnitId="a14daeadcc3acb6" ads:adSize="BANNER" 
					ads:loadAdOnCreate="true"/> -->

			</LinearLayout>


		</RelativeLayout>




	</android.gesture.GestureOverlayView>
</LinearLayout>
